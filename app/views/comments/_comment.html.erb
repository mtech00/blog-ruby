<div id="<%= dom_id(comment) %>">
  <div class="flex justify-between rounded-md border border-gray-400 px-4 py-3 gap-2">
    <div class="flex flex-col gap-2">
      <p class="text-gray-500"><%= comment.content %></p>
      <p class="text-gray-500 text-sm font-normal"><%= time_ago_in_words comment.created_at %> ago</p>
    </div>

    <div class="flex items-center gap-2">
      <%= render "likes", likeable: comment %>

      <% if authenticated_and_authorized?(comment) %>
        <%= link_to "Edit", edit_post_comment_path(comment.post, comment), class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
        <%= button_to "Delete", post_comment_path(comment.post, comment), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "rounded-md px-3.5 py-2.5 bg-red-600 hover:bg-red-500 text-white block font-medium cursor-pointer" %>
      <% end %>
    </div>
  </div>
</div>
