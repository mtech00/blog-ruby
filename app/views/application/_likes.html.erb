<div id="<%= dom_id(likeable, :likes) %>" class="flex items-center">
  <% if authenticated? %>
    <% if likeable.liked_by?(Current.user) %>
      <%= button_to "Unlike",
                    likeable_path(likeable),
                    method: :delete,
                    class: "rounded-l-md px-3.5 py-2.5 bg-red-600 hover:bg-red-500 text-white block font-medium" %>
    <% else %>
      <%= button_to "Like",
                    likeable_path(likeable),
                    method: :post,
                    class: "rounded-l-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <% end %>
  <% end %>

  <div class="rounded-r-md px-3.5 py-2.5 bg-green-600 hover:bg-green-500 text-white block font-medium">
    <%= likeable.likes_count %>
  </div>
</div>
