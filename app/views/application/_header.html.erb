<header class="flex justify-between items-center container mx-auto px-5 py-4">
  <div class="flex items-center gap-4">
    <h1 class="text-2xl font-bold">
      <%= link_to "Blog", root_path %>
    </h1>

    <% if authenticated? %>
      <span class="text-gray-500 text-sm">
        Welcome, <%= Current.user.email_address %>
      </span>
    <% end %>
  </div>

  <nav class="flex items-center gap-4">
    <%= link_to "Posts", posts_path, class: "text-gray-500 hover:text-gray-700 underline hover:no-underline" %>

    <% if authenticated? %>
      <%= link_to "Categories", categories_path, class: "text-gray-500 hover:text-gray-700 underline hover:no-underline" %>
      <%= button_to "Logout", session_path, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-500 hover:text-gray-700 underline hover:no-underline cursor-pointer" %>
    <% else %>
      <%= link_to "Login", new_session_path, class: "text-gray-500 hover:text-gray-700 underline hover:no-underline" %>
      <%= link_to "Sign Up", new_registration_path, class: "text-gray-500 hover:text-gray-700 underline hover:no-underline" %>
    <% end %>
  </nav>
</header>
