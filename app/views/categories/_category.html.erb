<div id="<%= dom_id category %>"
     class="flex justify-between rounded-md border border-gray-400 px-4 py-3 gap-2">
  <div class="flex items-center justify-between gap-1 flex-1">
    <p><%= category.title %></p>
    <p class="text-gray-500 text-sm font-normal"><%= time_ago_in_words category.created_at %> ago</p>
  </div>

  <div class="flex gap-2">
    <%= link_to "Edit",
                edit_category_path(category),
                class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
    <%= button_to "Delete",
                  category_path(category),
                  method: :delete,
                  data: { turbo_confirm: "Are you sure?" },
                  class: "rounded-md px-3.5 py-2.5 bg-red-600 hover:bg-red-500 text-white block font-medium cursor-pointer" %>
  </div>
</div>
