<div>
  <h1 class="font-bold text-4xl">Categories#new</h1>
  <%= form_with model: Category.new , class: "flex flex-col gap-4" do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, class: "border-2 border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-300 rounded-md p-2 outline-none shadow-sm transition duration-300 ease-in-out" %>

  <div>
    <%= form.submit "Create Category ",  class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold px-4 py-2 rounded-lg shadow-md transition duration-200 ease-in-out"%>
  </div>
  
  <% end %>
  <div>
</div>
