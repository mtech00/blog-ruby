<%= form_with model: category, class: "flex flex-col gap-4" do |form| %>
  <%= render "form_errors", record: form.object %>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title, autofocus: true, placeholder: true, class: "block shadow-sm rounded-md border outline-hidden px-3 py-2 mt-2 w-full" %>
  </div>

  <%= form.submit class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
<% end %>
